    display: flex;
    align-items: center;
    gap: 0.75rem;
    position: relative;
}

.alert.success {
    background: #DCFCE7;
    color: #166534;
    border: 1px solid #BBF7D0;
}

.alert.error {
    background: #FEE2E2;
    color: #991B1B;
    border: 1px solid #FECACA;
}

.close-alert {
    position: absolute;
    right: 1rem;
    background: none;
    border: none;
    cursor: pointer;
