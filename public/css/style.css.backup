:root {
    --primary: #0F766E;
    /* Teal 700 */
    --primary-light: #14B8A6;
    /* Teal 500 */
    --primary-dark: #0D9488;
    /* Teal 600 */
    --secondary: #0EA5E9;
    /* Sky 500 */
    --accent: #F59E0B;
    /* Amber 500 */
    --bg-body: #F0FDF4;
    /* Green 50 */
    --bg-card: #FFFFFF;
    --text-main: #1E293B;
    /* Slate 800 */
    --text-muted: #64748B;
    /* Slate 500 */
    --border: #E2E8F0;
    /* Slate 200 */
    --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --radius: 12px;
}

* {
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: var(--radius);
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
}

.btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(15, 118, 110, 0.3);
}

.btn-secondary {
    background: white;
    color: var(--text-main);
    border: 1px solid var(--border);
    padding: 0.6rem 1.2rem;
    border-radius: var(--radius);
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
}

.btn-text {
    background: none;
    border: none;
    color: var(--text-muted);
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
}

.btn-text:hover {
    color: var(--primary);
}

.btn-warning {
    background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    box-shadow: 0 2px 4px rgba(245, 158, 11, 0.2);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
}

.btn-warning:hover {
    box-shadow: 0 4px 8px rgba(245, 158, 11, 0.3);
    transform: translateY(-1px);
}

.btn-danger {
    background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    box-shadow: 0 2px 4px rgba(239, 68, 68, 0.2);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
}

.btn-danger:hover {
    box-shadow: 0 4px 8px rgba(239, 68, 68, 0.3);
    transform: translateY(-1px);
}

/* Calendar */
.calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    margin-top: 1rem;
    background: white;
    padding: 1rem;
    border-radius: var(--radius);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border: 1px solid var(--border);
}

.calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1rem;
}

.calendar-day-header {
    text-align: center;
    font-weight: 800;
    color: white;
    padding: 1rem;
    background: var(--primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    text-transform: uppercase;
    font-size: 1rem;
    letter-spacing: 0.1em;
}

.calendar-day {
    background: white;
    border-radius: var(--radius);
    padding: 1rem;
    min-height: 180px;
    border: 2px solid transparent;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.06);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
}

.calendar-day::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: var(--border);
    transition: background 0.3s;
}

.calendar-day:hover {
    border-color: var(--primary);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(-8px);
    z-index: 10;
}

.calendar-day:hover::before {
    background: var(--primary);
}

.day-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
}

.day-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--primary-dark);
    line-height: 0.8;
    letter-spacing: -0.05em;
}

.day-gregorian {
    font-size: 0.75rem;
    font-weight: 700;
    color: white;
    background: var(--secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    box-shadow: 0 2px 4px rgba(14, 165, 233, 0.3);
}

.day-stats {
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.stat-badge {
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 700;
    transition: transform 0.2s;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.calendar-day:hover .stat-badge {
    transform: scale(1.03);
}

.stat-nasi {
    background-color: #DCFCE7;
    color: #14532d;
    border: 1px solid #86EFAC;
}

.stat-snack {
    background-color: #E0F2FE;
    color: #0c4a6e;
    border: 1px solid #7DD3FC;
}

/* Modern Calendar Card Styles */
.modern-calendar-container {
    background: transparent;
}

.modern-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
}

.modern-card:hover {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
}

.card-header {
    background-color: #DEE4ED;
    padding: 0.2rem;
}

.card-date-section {
    display: flex;
}

.card-date-section-left-background {
    background-color: #DEE4ED;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.card-date-section-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: white;
    width: 100%;
    height: 100%;
    padding: 0.5rem 0;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
}

.card-date-section-right-background {
    background-color: white;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.card-date-section-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #DEE4ED;
    width: 100%;
    height: 100%;
    padding: 0.5rem 0;
    border-bottom-left-radius: 1rem;
}

.hijri-number {
    font-size: 2.2rem;
    font-weight: 900;
    color: #1B4D3E;
    line-height: 1;
}

.hijri-label {
    font-size: 0.688rem;
    font-weight: 700;
    color: #1B4D3E;
}

.gregorian-number {
    font-size: 2.2rem;
    font-weight: 900;
    color: #1E425E;
    line-height: 1;
}

.gregorian-label {
    font-size: 0.688rem;
    font-weight: 700;
    color: #000;
}

.card-body-modern {
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background: white;
    flex-grow: 1;
    justify-content: center;
    margin-top: -0.25rem;
    padding-top: 0.25rem;
    border-bottom-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
}

.stat-item-nasi {
    background: #E6FFEA;
    border: 2px solid #B8E6BE;
    border-radius: 0.75rem;
    padding: 0.5rem 0.75rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3rem;
    margin-top: 0.6rem;
}

.stat-item-snack {
    background: #E0F2FF;
    border: 2px solid #B8DFFF;
    border-radius: 0.75rem;
    padding: 0.5rem 0.75rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3rem;
}

.stat-label-nasi {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1B4D3E;
}

.stat-label-snack {
    font-size: 1.1rem;
    font-weight: 700;
    color: #0F4C81;
}

.stat-value-nasi {
    font-size: 1.3rem;
    font-weight: 700;
    color: #1B4D3E;
}

.stat-value-snack {
    font-size: 1.3rem;
    font-weight: 700;
    color: #0F4C81;
}

.empty-state {
    font-size: 0.75rem;
    color: #9CA3AF;
    text-align: center;
    padding: 1rem 0;
}

/* Forms & Inputs */
.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-main);
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    font-size: 1rem;
    transition: border-color 0.2s;
}

.form-control:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(20, 184, 166, 0.1);
}

.row {
    display: flex;
    gap: 1rem;
}

.col {
    flex: 1;
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
}

.modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
}

.modal-content {
    background: white;
    width: 100%;
    max-width: 500px;
    border-radius: 16px;
    position: relative;
    z-index: 1001;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    animation: modalSlide 0.3s ease-out;
}

@keyframes modalSlide {
    from {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-body {
    padding: 1.5rem;
}

.modal-footer {
    padding: 1.5rem;
    border-top: 1px solid var(--border);
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
}

.close-modal {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--text-muted);
}

